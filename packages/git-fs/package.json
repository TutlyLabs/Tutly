{
  "name": "@tutly/git-fs",
  "displayName": "Tutly Git File System Provider",
  "description": "A VS Code extension that provides file system access to Git repositories",
  "version": "0.0.1",
  "publisher": "tutly",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "browser": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tutlyfs.run",
        "title": "Run Code"
      },
      {
        "command": "tutlyfs.submit",
        "title": "Submit Code"
      },
      {
        "command": "tutlyfs.save",
        "title": "Save Changes"
      }
    ],
    "keybindings": [
      {
        "command": "tutlyfs.run",
        "key": "ctrl+alt+shift+r",
        "mac": "cmd+alt+shift+r"
      },
      {
        "command": "tutlyfs.submit",
        "key": "ctrl+alt+shift+s",
        "mac": "cmd+alt+shift+s"
      },
      {
        "command": "tutlyfs.save",
        "key": "ctrl+alt+shift+v",
        "mac": "cmd+alt+shift+v"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tutly-container",
          "title": "Tutly",
          "icon": "$(repo)"
        }
      ]
    },
    "views": {
      "tutly-container": [
        {
          "type": "webview",
          "id": "tutly.webview",
          "name": "Tutly",
          "visibility": "visible"
        }
      ]
    },
    "configuration": {
      "title": "Tutly FS",
      "properties": {
        "tutlyfs.assignmentId": {
          "type": "string",
          "default": "",
          "description": "Assignment ID for the repository"
        },
        "tutlyfs.submissionId": {
          "type": "string",
          "default": "",
          "description": "Submission ID for the repository"
        },
        "tutlyfs.type": {
          "type": "string",
          "enum": [
            "TEMPLATE",
            "SUBMISSION"
          ],
          "default": "TEMPLATE",
          "description": "Repository type"
        },
        "tutlyfs.mode": {
          "type": "string",
          "enum": [
            "clone",
            "ondemand"
          ],
          "default": "clone",
          "description": "File system mode: 'clone' (full repo, writable ephemeral) or 'ondemand' (read-only)"
        },
        "tutlyfs.webOrigin": {
          "type": "string",
          "default": "",
          "description": "Web origin for loading webview resources"
        }
      }
    },
    "terminal": {
      "profiles": [
        {
          "id": "tutly.terminal-profile",
          "title": "Tutly Terminal",
          "icon": "$(terminal)"
        }
      ]
    }
  },
  "scripts": {
    "build": "webpack --mode production && webpack --config webpack-react.config.js",
    "build-extension": "webpack --mode production",
    "build-webview": "webpack --config webpack-react.config.js",
    "dev": "webpack --mode development --watch",
    "dev-webview": "webpack --config webpack-react.config.js --watch",
    "watch": "npm-run-all --parallel dev dev-webview",
    "package": "pnpm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/vscode": "^1.75.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^4.0.15",
    "ts-loader": "^9.5.1",
    "typescript": "5.5.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.96.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@tiptap/extension-highlight": "^3.6.6",
    "@tiptap/extension-image": "^3.6.6",
    "@tiptap/extension-list": "^3.6.6",
    "@tiptap/extension-subscript": "^3.6.6",
    "@tiptap/extension-superscript": "^3.6.6",
    "@tiptap/extension-task-item": "^3.11.0",
    "@tiptap/extension-task-list": "^3.11.0",
    "@tiptap/extension-text-align": "^3.6.6",
    "@tiptap/extension-typography": "^3.6.6",
    "@tiptap/html": "^3.11.0",
    "@tiptap/starter-kit": "^3.6.6",
    "@uiw/react-md-editor": "^4.0.8",
    "buffer": "^6.0.3",
    "jszip": "^3.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
