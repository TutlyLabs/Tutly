{
  "name": "fsrelay",
  "displayName": "Tutly File System Provider",
  "description": "A VS Code extension that provides file system and terminal access",
  "version": "0.0.1",
  "publisher": "tutly",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "browser": "./dist/extension.js",
  "enabledApiProposals": [
    "fileSearchProvider",
    "textSearchProvider"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "tutlyExplorer",
          "name": "Tutly Connection"
        }
      ]
    },
    "commands": [
      {
        "command": "tutly.connectToServer",
        "title": "Connect to Tutly File Server",
        "category": "Tutly"
      },
      {
        "command": "tutly.disconnectFromServer", 
        "title": "Disconnect from Tutly File Server",
        "category": "Tutly"
      },
      {
        "command": "tutly.openWorkspace",
        "title": "Open Tutly Workspace",
        "category": "Tutly"
      },
      {
        "command": "tutly.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Tutly"
      },
      {
        "command": "tutly.createTerminal",
        "title": "Create Tutly Terminal",
        "icon": "$(terminal)",
        "category": "Tutly"
      },
      {
        "command": "tutly.setDefaultTerminal",
        "title": "Set Tutly as Default Terminal",
        "category": "Tutly"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tutly.refresh",
          "when": "view == tutlyExplorer",
          "group": "navigation"
        },
        {
          "command": "tutly.createTerminal",
          "when": "view == tutlyExplorer",
          "group": "navigation"
        }
      ],
      "terminal/title/context": [
        {
          "command": "tutly.createTerminal",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "tutly.createTerminal"
        },
        {
          "command": "tutly.setDefaultTerminal"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tutly.createTerminal",
        "key": "ctrl+shift+`",
        "mac": "cmd+shift+`",
        "when": "!terminalFocus"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "tutly.terminal-profile",
          "title": "Tutly Terminal"
        }
      ]
    },
    "configuration": {
      "title": "Tutly File System",
      "properties": {
        "tutly.server.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host address of the Tutly file server"
        },
        "tutly.server.port": {
          "type": "number", 
          "default": 3001,
          "description": "Port number of the Tutly file server"
        },
        "tutly.server.apiKey": {
          "type": "string",
          "default": "tutly-dev-key",
          "description": "API key for Tutly file server authentication"
        },
        "tutly.server.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to server on extension activation"
        }
      }
    }
  },
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch", 
    "package": "webpack --mode production && vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@types/vscode": "^1.75.0",
    "@types/ws": "^8.5.12",
    "ts-loader": "^9.5.1",
    "typescript": "5.5.4",
    "webpack": "^5.96.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "path-browserify": "^1.0.1",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "ws": "^8.18.0"
  }
}