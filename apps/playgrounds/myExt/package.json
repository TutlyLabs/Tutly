{
    "name": "tutly-file-system",
    "displayName": "Tutly File System Provider",
    "description": "VS Code web extension for reading local files via Tutly CLI server",
    "version": "0.1.0",
    "publisher": "tutly",
    "license": "MIT",
    "enabledApiProposals": ["fileSearchProvider", "textSearchProvider"],
    "private": true,
    "activationEvents": ["*"],
    "browser": "./extension",
    "main": "./extension",
    "engines": {
      "vscode": "^1.75.0"
    },
    "contributes": {
      "views": {
        "explorer": [
          {
            "id": "tutlyExplorer",
            "name": "Tutly Connection"
          }
        ]
      },
      "commands": [
        {
          "command": "tutly.connectToServer",
          "title": "Connect to Tutly File Server",
          "category": "Tutly"
        },
        {
          "command": "tutly.disconnectFromServer", 
          "title": "Disconnect from Tutly File Server",
          "category": "Tutly"
        },
        {
          "command": "tutly.openWorkspace",
          "title": "Open Tutly Workspace",
          "category": "Tutly"
        },
        {
          "command": "tutly.refresh",
          "title": "Refresh",
          "icon": "$(refresh)",
          "category": "Tutly"
        },
        {
          "command": "tutly.createTerminal",
          "title": "Create Tutly Terminal",
          "icon": "$(terminal)",
          "category": "Tutly"
        }
      ],
      "menus": {
        "view/title": [
          {
            "command": "tutly.refresh",
            "when": "view == tutlyExplorer",
            "group": "navigation"
          },
          {
            "command": "tutly.createTerminal",
            "when": "view == tutlyExplorer",
            "group": "navigation"
          }
        ],
        "terminal/title/context": [
          {
            "command": "tutly.createTerminal",
            "group": "navigation"
          }
        ],
        "commandPalette": [
          {
            "command": "tutly.createTerminal"
          }
        ]
      },
      "configuration": {
        "title": "Tutly File System",
        "properties": {
          "tutly.server.host": {
            "type": "string",
            "default": "localhost",
            "description": "Host address of the Tutly file server"
          },
          "tutly.server.port": {
            "type": "number", 
            "default": 3001,
            "description": "Port number of the Tutly file server"
          },
          "tutly.server.apiKey": {
            "type": "string",
            "default": "tutly-dev-key",
            "description": "API key for Tutly file server authentication"
          },
          "tutly.server.autoConnect": {
            "type": "boolean",
            "default": true,
            "description": "Automatically connect to server on extension activation"
          }
        }
      }
    },
    "scripts": {
      "compile": "yarn webpack-cli --config extension.webpack.config --mode production",
      "watch": "yarn webpack-cli --config extension.webpack.config --mode production --watch --info-verbosity verbose",
      "prepublish": "yarn webpack-cli --config extension.webpack.config --mode production"
    },
    "devDependencies": {
      "@types/vscode": "^1.48.0",
      "ts-loader": "^4.4.2",
      "typescript": "^3.9.7",
      "webpack": "^4.43.0",
      "webpack-cli": "^3.3.12"
    }
  }
  